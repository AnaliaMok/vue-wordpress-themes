{
	"compilerOptions": {
		"target": "esnext",
		"strict": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
		"jsx": "react",
		"jsxFactory": "h",
		"types": [
      "webpack-env"
    ],
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		]
	},
	// "typesRoot": ["./node_modules/@types", "./assets/vue"],
	"exclude": ["node_modules"],
	"include": [
		"node_modules/vue-tsx-support/enable-check.d.ts",
		"assets/vue/**/*.vue",
		"assets/vue/**/*.ts",
		"assets/vue/**/*.tsx"
	],
}